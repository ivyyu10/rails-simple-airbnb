<h1>Edit this Flat!</h1>
<div class="form">
  <%= simple_form_for(@flat) do |f| %>
    <div class="col-6" >
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests, collection: [1, 2, 3, 4, 5] %>
      <%= f.submit class:"btn btn-primary"%>
    </div>
  <% end %>
</div>